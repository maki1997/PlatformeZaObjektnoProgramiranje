<Window x:Class="SF_12_2016.GUI.EditTipa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SF_12_2016.GUI"
        mc:Ignorable="d"
        Title="EditTipa" Height="300" Width="300">
    <Grid  KeyDown="Button_KeyDown">
        <Label  Content="Naziv:" HorizontalAlignment="Left" Margin="17,24,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.179,0.03" Width="91" Height="29"/>
        <TextBox Name="tbNaziv" HorizontalAlignment="Left" Height="29" Margin="125,24,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="148" Text="{Binding Path=Naziv}" />
        <Button Name="btSacuvaj" Content="Sacuvaj" Click="btSacuvaj_Click" HorizontalAlignment="Left" Margin="17,179,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="btIzlaz" Content="Izlaz" Click="Izlaz" HorizontalAlignment="Left" Margin="17,219,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
